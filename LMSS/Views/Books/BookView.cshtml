@{
    Layout = "";
}

   <link rel="stylesheet" href="/css/BookView.css" />


   
    <div class="nav">
        <div class="left">
      <img class="logo" src="https://img.freepik.com/premium-vector/education-logo-icon-template-open-book-illustration_487414-634.jpg?w=2000" />
      <h2>LMSS</h2>
      
     </div>
      <div class="right">
        <input type="radio" name="radio2" value="3" id="tab-1" checked/>
        <label for="tab-1" class= "nav__1">
          <a asp-controller="LendRequests" asp-action="UserIssuedBooks">Issued Books</a></label>
        
        <input type="radio" name="radio2" value="4" id="tab-2" />
        <label for="tab-2" class= "nav__2">
          <a asp-controller="Books" asp-action="BookView"> View Books</a></label>
        
        <input type="radio" name="radio2" value="5" id="tab-3" />
        <label for="tab-3" class= "nav__3">
          <a asp-controller="LendRequests" asp-action="UserRecords"> Records</a></label>

         <input type="radio" name="radio2" value="6" id="tab-4" />
        <label for="tab-4" class= "nav__4">
          <a asp-controller="Accounts" asp-action="Login"> Logout</a></label>
        </div>
        
        
      </div>
<!-- -------------------------------------search -->
<div class="container">
  <div class="search">
     <form style="display:flex;justify-content:center;">
    <input type="text" name="searchstring" class="search__input" placeholder="Search..."/>
    <input type="submit"/>
</form>
  </div>
    <br/>
    <br/>
    <br/>


    <div class="area-box">
        @foreach (var item in Model) {
        <div class="box1">
            <img src="@item.ImageUrl" alt="">
            <br/>
            <br/>
             <h1>@item.BookTitle</h1><br/>
                  <!--Text-->
                  <p class="text">Category : @item.Category<br/>Author:@item.Author.AuthorName</p>
                  <!-- Provides extra visual weight and identifies the primary action in a set of buttons -->
                  <br/><br/>
                  <form asp-controller="LendRequests" asp-action="RequestBorrow" asp-route-bookId=@item.BookId>
                         <input type="submit" value="Request to Borrow"/>
                    </form>

        </div>
        }
        </div>
       
        </div>

        
      
