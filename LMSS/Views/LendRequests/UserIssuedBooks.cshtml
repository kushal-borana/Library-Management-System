@{
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}
<style>
    .card {
  
  box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
  transition: 0.3s;
}

.card:hover {
  box-shadow: 0 8px 16px 0 rgba(0,0,0,0.2);
}


.containerl {
  padding: 2px 16px;
}

table{
    width:100%;

}
tr{
    height:40px;
}

th{
    font-family: 'Poppins', sans-serif;
}

td{
    font-family: 'Poppins', sans-serif;
}
table, th, td {
  border: 1px solid black;
}

</style>

<div class="card">
   <br/>
    <br/>
  <h1 style="text-align:center;font-size:35px;">List of Issued Books</h1>
  <div class="containerl">
    <table class="table">
                <thead class="table-dark">
                <tr>
                    <th scope="col">Lend Id</th>
                    <th scope="col">User Name</th>
                    <th scope="col">Book Name</th>
                    <th scope="col">Lend Date</th>
                    <th scope="col">Return Date</td>
                    <th scope="col">Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model) {
                <tr>
                    
                    <td>@item.LendId</td>
                    <td>@item.User.UserName</td>
                    <td>@item.Book.BookTitle</td>
                    <td>@item.LendDate</td>
                    <td>@item.ReturnDate</td>
                    <td><form asp-controller="LendRequests" asp-action="ReturnQuery" asp-route-bookId=@item.BookId>
                         <input type="submit" value="Return"/></form></td>
                    
                    </tr>

                }
            </tbody>
            </table>
  </div>
</div>
