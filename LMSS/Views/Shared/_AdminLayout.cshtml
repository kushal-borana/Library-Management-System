  <!-- Item 2 -->
  <input type="radio" name="slideItem" id="slide-item-2" class="slide-toggle"/>
  <label for="slide-item-2"><a asp-controller="Authors" asp-action="Index"><span>Authors</span></a></label>
  
  <!-- Item 3 -->
  <input type="radio" name="slideItem" id="slide-item-3" class="slide-toggle"/>
  <label for="slide-item-3"><a  asp-controller="Publishers" asp-action="Index"><span>Publishers</span></a></label>
  
  <!-- Item 4 -->
  <input type="radio" name="slideItem" id="slide-item-4" class="slide-toggle"/>
  <label for="slide-item-4"><a  asp-controller="Accounts" asp-action="Index"><span>Users</span></a></label>

  <!-- Item 5 -->
  <input type="radio" name="slideItem" id="slide-item-5" class="slide-toggle"/>
  <label for="slide-item-5"><a  asp-controller="LendRequests" asp-action="AdminPage"><span>Request List</span></a></label>
  
  <!-- Item 6 -->
  <input type="radio" name="slideItem" id="slide-item-6" class="slide-toggle"/>
  <label for="slide-item-6"><a  asp-controller="LendRequests" asp-action="admin_lendbooks"><span>LentBooks</span></a></label>

   <!-- Item 7 -->
  <input type="radio" name="slideItem" id="slide-item-7" class="slide-toggle"/>
  <label for="slide-item-7">          <a  asp-controller="LendRequests" asp-action="admin_lendreturnhist"><span>Lend/Return History</span></a></label>

  
  <!-- Item 8-->
  <input type="radio" name="slideItem" id="slide-item-8" class="slide-toggle"/>
