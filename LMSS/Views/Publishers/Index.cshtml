
@model IEnumerable<LMSS.Models.Publisher>
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<style>
    .card {
  
  box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
  transition: 0.3s;
}

.card:hover {
  box-shadow: 0 8px 16px 0 rgba(0,0,0,0.2);
}


.containerl {
  padding: 2px 16px;
}
table{
    width:100%;

}
tr{
    height:40px;
}

th{
    font-family: 'Poppins', sans-serif;
}

td{
    font-family: 'Poppins', sans-serif;
}
table, th, td {
  border: 1px solid black;
}
</style>
<div class="card">
    <h1>Publisher List</h1>
   <a asp-action="Create">Create New</a>
  <div class="containerl">
    <table class="table">
                <thead class="table-dark">
                <tr>
                    
                   <th scope="col">@Html.DisplayNameFor(model=>model.PublisherName)</th>
                   
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model) {
                <tr>
                    
                    <td>@Html.DisplayFor(modelItem => item.PublisherName)</td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.PublisherId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.PublisherId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.PublisherId">Delete</a>
            </td>
                  
                    </tr>
                }
            </tbody>
            </table>
  </div>
</div>
